---
layout: layout.dot
title: Index page
---
[[##section:
<div class="topbar">
	<!-- Left -->
	<span class="icons">
		<span class="fa fa-wifi">&nbsp;</span>
		<!--span class="fa fa-fire">&nbsp;</span-->
		{{?it.p1 && it.p1.lowOrHigh === 1}}
		<span class="fa fa-sort-desc">&nbsp;</span>
		{{??}}
		<span class="fa fa-sort-asc">&nbsp;</span>
		{{?}}
	</span>

	<!-- Right -->
	<span class="pull-right"></span>
</div>

<div class="container">
	<div class="row">
	{{?it.p1}}
		<div class="col-md-3 col-sm-3 col-xs-3">
			<div class="thermo">
				<span class="fa fa-plug fa-4x">&nbsp;</span>
				<br><br>
					{{=it.p1.currentUse}} kW
			</div>
		</div>
		<div class="col-md-3 col-sm-3 col-xs-3">
			<div class="thermo">
				<span class="wi wi-meteor fa-4x">&nbsp;</span>
				<br><br>
				{{=it.p1.gasUse}}
			</div>
		</div>
		<div class="col-md-3 col-sm-3 col-xs-3">
			<div class="thermo">
				<span class="wi wi-barometer fa-4x">&nbsp;</span>
            	<br><br>
                	{{=it.p1.totalLow}} kWh / {{=it.p1.totalHigh}} kWh

			</div>
		</div>
		<div class="col-md-3 col-sm-3 col-xs-3">
        	<div class="thermo">
        		<span class="wi wi-time-3 fa-4x">&nbsp;</span>
				<br><br>
				{{=it.p1.gasTime}}
        	</div>
        </div>
	</div>
	<br>
	{{?}}
	<div class="row">
		<div class="col-md-6">
			<div class="thermo">
				usage 1h/2h/6h/12h/24h<br>
					usage 1m/6m/1y<br>
                			pi hi/lo?<br>
			</div>
		</div>
		<div class="col-md-6">
			<div class="thermo">
				{{?it.p1 && it.p1.original}}
					{{=it.p1.original.join('<br>')}}
				{{?}}
			</div>
		</div>
	</div>



</div>
#]]
