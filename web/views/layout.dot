<html>
	<head>
		<title>Thermo-XL Thermostat</title>
		<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
		<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
		<link href="//cdnjs.cloudflare.com/ajax/libs/weather-icons/1.3.2/css/weather-icons.min.css" rel="stylesheet">
		<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
		<style>
			body {
				background : #333;
				margin:0px;
				padding:10px;
				font-family: 'Open Sans', sans-serif;
			}
			.wi25 {
				font-size:25px;
			}
			#thermo {
				padding: 5px;
				padding-top:35px;
				height: 240px;
				width: 320px;
				border : 1px solid #999;
				background: #fff;
				position: absolute;
			}
			
			.topbar {
				height:25px;
				background:#111;
				color:white;
				position: absolute;
				top:0px;
				left:0px;
				width:100%;
				padding:2px;
				padding-right:5px;
			}
			.topbar .icons {
				padding-left: 5px;
			}
			#setTemperature {
				position: absolute;
				right : 5px;
				top: 40px;
			}
			.tempup {
				right : 5px;
				bottom: 75px;
				font-size:2em;
				width:62px;
				height: 65px;
				position: absolute;
			}
			.tempdown {
				right : 5px;
				bottom: 5px;
				height: 65px;
				width: 62px;
				position: absolute;
				font-size:2em;
			}
			
			.info {
				font-size:1.2em;
			}
			.temperature .icon {
				font-size:1.5em;
			}
			.large {
			font-size:2em;
			}
		</style>
	</head>
	<body>
		<div id="thermo">
			{{=it.body}}
		</div>
		<script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
		<script>
			console.log("Welcome Thermo-XL!");
		</script>
	</body>
</html>
